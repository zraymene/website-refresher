{

  "name": "website-refresher",

  "version": "1.0.0",

  "manifest_version": 2,

  "background": {

    "scripts": [

      "js/background.js"

    ],

    "persistent": false

  },

  "browser_action": {

      "default_icon": "Res/icon.png",

      "default_popup": "popup.html"

    },

  "permissions": [

        "storage",

        "webNavigation",

        "tabs",

        "notifications",

        "http://*/",

        "https://*/"

   ],

   "content_scripts": [
     {
       "matches": [

         "<all_urls>"

        ],

       "js": ["js/jquery.js" , "js/content.js"]

     }

   ]


}
